{
  "name": "@successible/document-that",
  "description": "Manage a wiki/blog for free using git",
  "author": "Successible",
  "version": "0.0.0",
  "private": true,
  "license": "BUSL-1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/successible/document-that.git"
  },
  "type": "module",
  "scripts": {
    "docker": "docker build -t 'document-that' . && docker run -p 3001:3001 'document-that'",
    "build": "next build && next export",
    "dev": "kill-port 3000 3001; npm install -g pnpm && pnpm install && npx tsc && (next dev -p 3000 & tsc --incremental --watch --preserveWatchOutput & nodemon dist/server/server.js)",
    "lint": "bash lint.sh --format"
  },
  "engines": {
    "node": "19"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "sort"
    ],
    "extends": [
      "eslint:recommended",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "plugin:sort/recommended"
    ],
    "rules": {
      "react/no-unknown-property": [
        "error",
        {
          "ignore": [
            "css"
          ]
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@next/next/no-html-link-for-pages": "off"
    }
  },
  "dependencies": {
    "@emotion/react": "11.10.5",
    "@emotion/server": "11.10.0",
    "@fastify/cors": "8.2.0",
    "@fastify/helmet": "10.1.0",
    "@fastify/http-proxy": "8.3.0",
    "@fastify/nextjs": "9.2.0",
    "@isomorphic-git/lightning-fs": "4.6.0",
    "@mantine/core": "5.8.4",
    "@mantine/form": "5.8.4",
    "@mantine/hooks": "5.8.4",
    "@mantine/next": "5.8.4",
    "@mantine/notifications": "5.8.4",
    "@monaco-editor/react": "4.4.6",
    "@octokit/rest": "19.0.5",
    "color": "4.2.3",
    "core-js": "3.26.1",
    "dotenv": "16.0.3",
    "fastify": "4.10.2",
    "file-icons-js": "1.1.0",
    "gray-matter": "4.0.3",
    "immer": "9.0.16",
    "isomorphic-git": "1.21.0",
    "lodash": "4.17.21",
    "monaco-editor": "0.34.1",
    "ms": "2.1.3",
    "next": "13.0.5",
    "react": "18.2.0",
    "react-div-100vh": "0.7.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "react-icons": "4.7.1",
    "react-markdown": "8.0.3",
    "tabler-icons-react": "1.55.0",
    "use-immer": "0.8.1",
    "valid-url": "1.0.9",
    "zustand": "4.1.4"
  },
  "devDependencies": {
    "@babel/core": "7.20.5",
    "@emotion/eslint-plugin": "11.10.0",
    "@types/color": "3.0.3",
    "@types/lodash": "4.14.190",
    "@types/ms": "0.7.31",
    "@types/node": "18.11.9",
    "@types/react-dom": "18.0.9",
    "@types/react": "18.0.25",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "eslint-config-next": "13.0.5",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-sort": "2.4.0",
    "eslint": "8.28.0",
    "kill-port": "2.0.1",
    "nodemon": "2.0.20",
    "prettier": "2.8.0",
    "typescript": "4.9.3"
  }
}
